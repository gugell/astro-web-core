---
import { defaultLang, languages, tr } from '@utils/i18n';
import { getCurrentLang } from '@utils/navigation';
import Button from '@components/ui/Button.astro';

interface Props {
  t: Record<string, string>;
}

const { t } = Astro.props;
---

  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">{t['cfp.title']}</h1>
    
    <div class="bg-white p-8 rounded-lg shadow-md mb-8">
      <h2 class="text-2xl font-bold mb-4">Share Your Knowledge</h2>
      <p class="mb-6">We're always looking for speakers to share their experiences, insights, and knowledge with our community. Whether you're a seasoned developer or just starting out, we'd love to hear from you!</p>
      
      <h3 class="text-xl font-bold mb-2">Topics We're Interested In:</h3>
      <ul class="list-disc list-inside mb-6">
        <li>iOS Development</li>
        <li>Android Development</li>
        <li>Cross-platform Development</li>
        <li>Mobile UI/UX</li>
        <li>App Architecture</li>
        <li>Testing Strategies</li>
        <li>Development Tools and Workflows</li>
        <li>Case Studies and Real-world Experiences</li>
      </ul>

      <Button variant="primary"
      text={t['cfp.cta']} class="bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-dark"
       target="_blank",
       href="https://www.meetup.com/mobileheads-austria/"  />
    </div>
  </div>