---
import { createLocalizedPath } from '../utils/navigation';
import LanguagePicker from './LanguagePicker.astro';

interface Props {
  lang: string;
  currentPath: string;
  t: Record<string, string>;
}

const { lang, currentPath, t } = Astro.props;

const navItems = [
  { key: 'nav.home', path: '' },
  { key: 'nav.blog', path: 'blog' },
  { key: 'nav.cfp', path: 'cfp' },
  { key: 'nav.about', path: 'about' }
];
---

<div id="mobileMenu" class="hidden fixed inset-0 bg-white z-50">
  <div class="flex flex-col h-full p-6">
    <div class="flex justify-between items-center mb-8">
      <span class="text-2xl font-bold text-gray-900">MobileHeads Austria</span>
      <button id="closeMenu" class="text-gray-900 text-3xl">&times;</button>
    </div>
    <div class="flex justify-between items-center mb-8">
      <LanguagePicker currentLang={lang} currentPath={currentPath} />
    </div>
    <nav class="flex-1">
      <ul class="space-y-6">
        {navItems.map(({ key, path }) => (
          <li>
            <a 
              href={createLocalizedPath(lang, path)}
              class="text-gray-900 text-xl block hover:text-primary"
            >
              {t[key]}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</div>

<script>
  const mobileMenu = document.getElementById('mobileMenu');
  const menuButton = document.getElementById('menuButton');
  const closeButton = document.getElementById('closeMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  closeButton?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
    document.body.style.overflow = '';
  });
</script>